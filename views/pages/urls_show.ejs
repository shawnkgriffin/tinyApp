<!-- views/pages/urls_show.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
    <div class="jumbotron">
    <h2>Your Short URL is <%=shortURL%></h2>
    
  <form action="/urls/<%=shortURL%>/change" method="POST" style="margin:0px;">
          <label for="longURL">Change if you want a different URL or press OK:</label>
          <input id="longURL" type="text" name="newLongURL" value=<%=longURL%> style="width: 300px">
          <input type="submit" value="OK">
        </form>
  </main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>